
@model IEnumerable<Category> 
<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">Category Id</th>
            <th scope="col">Category Name</th>
            <th scope="col">Category Description</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <a asp-controller="Category" asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-primary mx-2">View</a>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning mx-2">Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger mx-2">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Category" asp-action="Create" class="btn btn-success mt-3">Add Category</a>
