@model Product 

<div class="container mt-5">
    <h2>Product Details</h2>

    <div class="card">
        <div class="card-header">
            <h4>@Model.Title</h4>
        </div>
        <div class="card-body">
            <p><strong>Product Id:</strong> @Model.ProductId</p>
            <p><strong>Price:</strong> @Model.Price</p>
            <p><strong>Quantity:</strong> @Model.Quantity</p>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Category:</strong> @Model.Category?.Name</p> 
        </div>
        <div class="card-footer">
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Back to Products</a>
            <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning">Edit</a>
            <a asp-controller="Product" asp-action="Delete" asp-route-id="@Model.ProductId" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>

