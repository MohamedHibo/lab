@model Product

<div class="container mt-5">
    <h2>Delete Product</h2>

    <h4>Are you sure you want to delete this product?</h4>
    <div>
        <h5>@Model.Title</h5>
        <p><strong>Price:</strong> @Model.Price</p>
        <p><strong>Quantity:</strong> @Model.Quantity</p>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Category:</strong> @Model.Category?.Name</p>
        <p>
            <strong>Image:</strong><br />
            <img src="/image/@Model.ImagePath" style="width: 100px; height: 100px;" alt="@Model.Title" />
        </p>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ProductId" />
        <div class="form-group mt-4">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
